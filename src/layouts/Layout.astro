---
import "@fontsource-variable/pixelify-sans";
import "@fontsource/roboto";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-gradient-to-r w-screen from-indigo-900 to-purple-900 flex font-roboto tracking-wider min-h-screen p-4 text-purple-100"
  >
    <slot />
  </body>
</html>
<style is:global>
  html {
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  body {
    display: flex;
    flex: 1; /* no need anymore to deal with height/width */
    flex-direction: column;
  }
  .github-profile-badge-img {
    border-radius: 50%;
    width: 200px !important;
    height: 200px !important;
  }
  .github-profile-badge-logo {
    position: absolute;
    top: 140px !important;
    right: 45px;
    width: 60px !important;
    height: 60px !important;
  }
  .github-profile-badge {
    height: 200px;
    position: relative;
  }
  .github-profile-badge-name-wrapper {
    position: absolute;
    right: -160px;
    bottom: 10px;
  }
  .github-profile-badge-name {
    font-size: 25px !important;
    font-family: "Pixelify Sans Variable" !important ;
  }
</style>
